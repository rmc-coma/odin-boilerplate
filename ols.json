{
	"$schema": "https://raw.githubusercontent.com/DanielGavin/ols/master/misc/ols.schema.json",
	"collections": [
		{ "name": "core", "path": "/opt/homebrew/opt/odin/libexec/core" },
		{ "name": "vendor", "path": "/opt/homebrew/opt/odin/libexec/vendor" },
		{ "name": "shared", "path": "src" }
	],
	"enable_semantic_tokens": true,
	"enable_document_symbols": true,
	"enable_hover": true,
	"enable_snippets": true, // Turns on builtin snippets
	"enable_procedure_context": true,
	"enable_inlay_hints": true,
	"enable_references": true,
	"verbose": true,
	"file_log": true
	// "disable_parser_errors": false,
	// "thread_pool_count": 4,
	// "odin_command": "", // Allows you to specify your Odin location, instead of just relying on the environment path.
	// "checker_args": "" // Pass custom arguments to `odin check
}
